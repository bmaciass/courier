
{
  "ts-node": {
    "swc": true,
    "transpileOnly": true,
    "require": [
      "tsconfig-paths/register"
    ]
  },
  "compilerOptions": {
    "types": [
      "node",
      "@cloudflare/workers-types"
    ],
    "lib": [
      "ES2020",
    ],
    "rootDir": "src",
    "outDir": "dist",
    "target": "es2020",
    "module": "CommonJS",
    "moduleResolution": "Node10",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "~/*": ["./src/*"]
    }
  }
}